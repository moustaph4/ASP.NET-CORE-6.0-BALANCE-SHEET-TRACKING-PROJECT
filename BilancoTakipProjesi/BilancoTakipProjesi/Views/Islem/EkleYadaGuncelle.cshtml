@model BilancoTakipProjesi.Models.Islem

@{
    ViewData["SayfaBasligi"] = Model.IslemId == 0 ? "İşlem Oluştur" : "İşlem Güncelle";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color: #212b36">
            <form asp-action="EkleYadaGuncelle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="IslemId" value="@Model.IslemId" />
                <div class="mb-3">
                    <ejs-datepicker id="tarih" ejs-for="Tarih" placeholder="Tarih" floatLabelType="Always"
                    format="dd-MMM-yyyy"></ejs-datepicker>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlKategori" ejs-for="KategoriId"
                        dataSource="@ViewBag.Kategoriler" placeholder="Kategori" floatLabelType="Always"
                        allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="KategoriId" text="IconluBaslik"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="KategoriId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="tutar" ejs-for="Tutar" placeholder="Tutar" floatLabelType="Always"
                    min=0 format="c0"></ejs-numerictextbox>
                    <span asp-validation-for="Tutar" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="bilgi" placeholder="Bilgi" ejs-for="Bilgi" floatLabelType="Always"
                    multiline="true"></ejs-textbox>
                </div>

                <ejs-button id="submit" type="submit" content="Onayla" cssClass="e-success"></ejs-button>

            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color: #212b36">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

