<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bilanço Takip Projesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @*-------------------*@
    @*<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/22.1.34/material.css" />*@
    <link href="https://cdn.syncfusion.com/ej2/22.1.34/bootstrap5-dark.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    @*-------------------*@

    <link href="https://unpkg.com/img-comparison-slider@7/dist/styles.css" rel="stylesheet" />



    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BilancoTakipProjesi.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/22.1.34/dist/ej2.min.js"></script>
    <script defer src="https://unpkg.com/img-comparison-slider@7/dist/index.js"></script>

</head>
<body class="e-bigger">
    
    <partial name="_SideBarPartialView"></partial>

    <div class="dock-target">

        <nav class="navbar sticky-top">
            <div class="container-fluid py-2 px-4">
                <i class="fa-solid fa-magnifying-glass"></i>
                <div>
                    <i class="fa-solid fa-bell"></i>
                    <i class="fa-solid fa-message"></i>
                    <img class="profile-pic" src="~/img/pro.png" />
                </div>
            </div>
        </nav>

        <div class="main-content">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="@(ViewData["isPanel"] == null ? "col-md-10" : "col-md-12")">
                        <main role="main" class="pb-3">
                            @if (ViewData["isPanel"] == null)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="d-flex flex-column mb-5">
                                            <div class="d-flex mb-1">
                                                <div class="flex-grow-1">
                                                    <h3 class="fw-bold">@ViewData["SayfaBasligi"]</h3>
                                                </div>
                                                <div>
                                                    @if (ViewData["SayfaYazisi"] != null)
                                                    {
                                                        <a class="btn btn-success" href="@ViewData["SayfaUrl"]">
                                                            @ViewData["SayfaYazisi"]
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                            <ejs-breadcrumb id="breadcrumb" separatorTemplate="@Html.Raw("<span class='fa-solid fa-angle-right'></span>")">
                                            </ejs-breadcrumb>
                                        </div>
                                    </div>

                                </div>
                            }
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </div>

    </div>
   
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BilancoTakipProjesi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
