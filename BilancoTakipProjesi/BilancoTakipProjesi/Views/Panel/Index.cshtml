@{
    ViewData["isPanel"] = true;
}

@*Summary Widgets*@

<div class="row mb-4">

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary income">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Toplam Gelir</span>
                <h1 class="display-6 fw-bold">@ViewBag.ToplamGelir</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary expense">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Toplam Gider</span>
                <h1 class="display-6 fw-bold">@ViewBag.ToplamGider</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary balance">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Bakiye</span>
                <h1 class="display-6 fw-bold">@ViewBag.Bakiye</h1>
            </div>
        </div>
    </div>

</div>

@*Doughnut and Spline chart*@

<div class="row mb-4">
    <div class="col-md-6">
        <div class="widget chart">
            <div class="p-4">
                <h5 class="fw-bold">Kategoriye Göre Giderler</h5>
            </div>
            <ejs-accumulationchart id="doughnutchart" enableSmartLabels background="#1a222b">

                <e-accumulation-series-collection>
                    <e-accumulation-series dataSource="@ViewBag.DoughnutChartData"
                                           xName="iconluKategoriBasligi" yName="tutar"
                                           innerRadius="60%" legendShape="Circle">
                        <e-accumulationseries-datalabel name="tutarFormati" visible></e-accumulationseries-datalabel>
                    </e-accumulation-series>
                </e-accumulation-series-collection>

                <e-accumulationchart-legendsettings position="Top" toggleVisibility="false">
                    <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
                </e-accumulationchart-legendsettings>

                <e-accumulationchart-tooltipsettings enable></e-accumulationchart-tooltipsettings>

            </ejs-accumulationchart>
        </div>
    </div>
    <div class="col-md-6">
        <div class="widget">
            <div class="p-4">
                <h5 class="fw-bold">SON İŞLEMLER</h5>
            </div>
            <div class="px-4 pb-4">
                <ejs-grid id="recent-transactions" dataSource="@ViewBag.SonIslemler" gridLines="None">
                    <e-grid-columns>
                        <e-grid-column headerText="KATEGORİ" field="IconluBaslik"></e-grid-column>
                        <e-grid-column headerText="TARİH" field="Tarih" type="date" format="dd-MMM-yyyy"></e-grid-column>
                        <e-grid-column headerText="TUTAR" field="GosterilenTutar" textAlign="Right"></e-grid-column>
                    </e-grid-columns>
                </ejs-grid>
            </div>
        </div>
    </div>
</div>


